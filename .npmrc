legacy-peer-deps=true
save-exact=false
fund=false
audit=false

# React Native / Metro bundler compatibility
# Use node-linker=hoisted to create a flat node_modules structure
# This prevents Metro from having issues with PNPM's symlink structure
node-linker=hoisted

# Disable strict peer dependencies for React Native ecosystem compatibility
strict-peer-dependencies=false

# Auto-install peers to prevent missing dependency issues
auto-install-peers=true

# Shamefully hoist packages that React Native/Metro needs at the top level
shamefully-hoist=true 