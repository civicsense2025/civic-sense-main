{
  "name": "civicsense-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/mobile",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "cd apps/web && npm run dev",
    "dev:mobile": "cd apps/mobile && npm start",
    "build:web": "cd apps/web && npm run build",
    "build:mobile": "cd apps/mobile && npm run build:android",
    "start:web": "pnpm --filter=@civicsense/web start",
    "lint:all": "npm run lint --workspaces",
    "test:all": "npm run test --workspaces",
    "type-check:all": "npm run type-check --workspaces",
    "optimize:imports": "node scripts/optimize-imports.js",
    "optimize:structure": "node scripts/optimize-structure.js",
    "clean:dist": "find . -name 'dist' -type d -not -path './node_modules/*' -exec rm -rf {} +",
    "clean:deps": "find . -name 'node_modules' -type d -not -path './node_modules' -exec rm -rf {} +",
    "fresh:install": "npm run clean:deps && npm install",
    "install:all": "pnpm install",
    "dev": "pnpm run dev:web",
    "build": "pnpm run build:web"
  },
  "dependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/pg": "^8.15.4",
    "@types/stripe": "^8.0.416",
    "canvas": "^3.1.0",
    "eslint": "^9.29.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5"
  },
  "overrides": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "@types/react": "^19.1.8"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ],
      "allowedVersions": {
        "react": "19",
        "react-dom": "19",
        "@types/react": "19",
        "@types/react-dom": "19"
      }
    },
    "ignoredBuiltDependencies": [
      "supabase"
    ]
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
} 