{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@civicsense/shared": [
        "../../packages/shared/src"
      ],
      "@civicsense/shared/*": [
        "../../packages/shared/src/*"
      ],
      "@civicsense/ui-shared": [
        "../../packages/ui-shared/src"
      ],
      "@civicsense/ui-shared/*": [
        "../../packages/ui-shared/src/*"
      ],
      "@civicsense/ui-web": [
        "../../packages/ui-web/src"
      ],
      "@civicsense/ui-web/*": [
        "../../packages/ui-web/src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ],
  "references": [
    { "path": "../../packages/shared" },
    { "path": "../../packages/ui-shared" },
    { "path": "../../packages/ui-web" }
  ]
}
