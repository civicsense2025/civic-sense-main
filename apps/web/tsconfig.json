{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@civicsense/shared": [
        "../../packages/shared"
      ],
      "@civicsense/shared/*": [
        "../../packages/shared/*"
      ],
      "@civicsense/ui-shared": [
        "../../packages/ui-shared"
      ],
      "@civicsense/ui-shared/*": [
        "../../packages/ui-shared/*"
      ],
      "@civicsense/ui-web": [
        "../../packages/ui-web"
      ],
      "@civicsense/ui-web/*": [
        "../../packages/ui-web/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/shared/**/*.ts",
    "../../packages/shared/**/*.tsx",
    "../../packages/ui-shared/**/*.ts",
    "../../packages/ui-shared/**/*.tsx",
    "../../packages/ui-web/**/*.ts",
    "../../packages/ui-web/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
