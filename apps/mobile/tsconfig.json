{
  "extends": "../../tools/typescript-config/expo.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@civicsense/business-logic/*": [
        "../../packages/business-logic/src/*"
      ],
      "@civicsense/types/*": [
        "../../packages/types/src/*"
      ],
      "@civicsense/types": [
        "../../packages/types/src"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
