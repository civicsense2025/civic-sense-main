{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@civicsense/shared": ["./packages/shared/src"],
      "@civicsense/shared/*": ["./packages/shared/src/*"],
      "@civicsense/ui-web": ["./packages/ui-web/src"],
      "@civicsense/ui-web/*": ["./packages/ui-web/src/*"],
      "@civicsense/ui-mobile": ["./packages/ui-mobile/src"],
      "@civicsense/ui-mobile/*": ["./packages/ui-mobile/src/*"],
      "@civicsense/ui-shared": ["./packages/ui-shared/src"],
      "@civicsense/ui-shared/*": ["./packages/ui-shared/src/*"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*",
    "apps/*/app/**/*",
    "apps/*/components/**/*",
    "apps/*/lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "**/*.test.*",
    "**/*.spec.*"
  ]
} 